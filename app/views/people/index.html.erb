<p id="notice"><%= notice %></p>

<h1>People</h1>
<div class="table-responsive">
<table class="table table-hover table-striped w-auto">
  <thead>
    <tr>
      <th scope="col">Id </th>
      <th scope="col">Full Name</th>
      <th scope="col">Company</th>
      <th scope="col">Created by</th>
      <th scope="col" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.id %></td>
        <td><%= link_to person.full_name, person %></td>
        <td><% person.companies.each do |company| %>
            <%= link_to company.name, company %>
          <% end %>
        </td>
        <td><%= person.user.username %></td>
        <% if user_signed_in? %>
          <% if person.user == current_user || current_user.admin  %>
            <td><%= link_to 'Edit', edit_person_path(person), class: 'btn btn-outline-primary btn-sml' %></td>
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sml' %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

