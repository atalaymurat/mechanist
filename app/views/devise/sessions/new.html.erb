<div class:"row">
  <div class="col-12 col-md-6  col-lg-4 mx-auto">
      <%= form_for(resource, html: {class: "form-signin mt-5" }, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="text-center mb-3">
        
          <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
          <p></p>
        </div>

        <div class="form-group">
      <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control", placeholder: "Email" %>
      <%= f.label :email, for: "inputEmail", class: "sr-only" %>
        </div>
        <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password",id: "inputPassword", class: "form-control", placeholder: "Password"%>
      <%= f.label :password, for: "inputPassword", class: "sr-only" %>
        </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= f.submit "Log in", class: "btn btn-lg btn-dark btn-block" %>

    <% end %>

    <p class="mt-3">
<%= render "devise/shared/links" %>
    </p>
<p class="my-2 text-muted text-center mt-5">Â© 2019-<%= Time.now.year %></p>
  </div>
</div>
