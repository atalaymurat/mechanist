<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label "upload a logo" %><br>
    <%= form.file_field :logo, class: "form-control" %><hr>
    <%= form.label "Upload Remote logo URL" %>
    <%= form.text_field :remote_logo_url, size: 80, class: "form-control", placeholder: "Enter image url" %>
    <hr>
    <p>
      <div class="form-check form-check-inline">
        
        <%= form.label "Remove Logo", class: "form-check-input" if company.logo? %>
        <%= form.check_box :remove_logo, class: "form-check-input" if company.logo? %>
        <%= image_tag(company.logo_url(:thumb)) if company.logo? %>
      </div>
    </p>

  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <hr>
  <div class="form-group">
    <strong>People:</strong><br />
    <%= form.label :person_ids, "Please Select People" %> <br />
    <%= form.collection_select :person_ids, Person.order(:first_name), :id, :full_name, {},{multiple: true} %>

  </div>

  <div class="form-group">
    <strong>Add new person:</strong><hr>
    <%= form.fields_for :people, Person.new do |p_form|  %>
      <div class="row">      
        <%= p_form.hidden_field :user_id, value:current_user.id %> 
        <div class="col-sm"><%= p_form.text_field :first_name, placeholder: "first name", class: "form-control" %> </div>
        <div class="col-sm"><%= p_form.text_field :middle_name, placeholder: "middle name", class: "form-control" %> </div>
        <div class="col-sm"><%= p_form.text_field :last_name, placeholder: "last name", class: "form-control" %> </div>
      </div>
    <% end %>

  </div>
  <br />
  
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
