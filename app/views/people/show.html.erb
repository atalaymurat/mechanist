<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Middle name:</strong>
  <%= @person.middle_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>
<p>
  <strong>Note:</strong><br>
  <%= @person.note %>
</p>
<p>
  <strong>Source:</strong>
  <%= @person.source %>
</p>

<p>
  <% if @person.companies.present? %>
    <strong> <%=  "Company".pluralize(@person.companies.count)%>:</strong>
    <% @person.companies.each do |company| %>
    <ul class="row">
      <li class="list-inline-item" > <%= link_to  company.name, company %></li> </ul>
    <% end %>
  <% end %>
</p>

<p>
  <% if @person.emails.present? %>
    <strong> <%= "Email".pluralize(@person.emails.count)%>:</strong>
    <% @person.emails.each do |email| %>
      <ul class="row">
        <li class="list-inline-item">
          <%= mail_to email.email %>
        </li>
        <li class="list-inline-item">
          <% if email.unsubscribe %>
            not listing in email list 
          <% end %>
        </li>
      </ul>
    <% end %>
  <% end %>

</p>
<p>
  <% if @person.phones.present? %>
    <strong> <%= "Phone".pluralize(@person.phones.count)%>:</strong>
    <% @person.phones.each do |phone| %>
      <ul class="row">
        <li class="list-inline-item">
          <%= phone.phone_type %> :
          <%= number_to_phone(phone.phone_number, area_code: true, delimiter: " ") %>
        </li>
      </ul>
    <% end %>
  <% end %>

</p>

<p>
  <strong>Created by:</strong>
  <%= @person.user.username %>
</p>
<%= link_to fa_stacked_icon("edit", type: "regular", text: "edit"), edit_person_path(@person), class: "px-2" if policy(@person).update? %> 
<%= link_to fa_stacked_icon('angle-left', text: "back" ), session[:index_page_url] if session[:index_page_url].present? %>
<%= link_to fa_stacked_icon('home', text: "home" ), root_path if session[:index_page_url].blank? %>
<%= link_to fa_stacked_icon("trash-alt",text: "Delete", type: :regular),@person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-link float-right' if policy(@person).destroy? %>

